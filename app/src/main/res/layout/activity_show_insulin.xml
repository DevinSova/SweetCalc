<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.dbough.diabetescalulator.ShowInsulin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="empty"
        android:id="@+id/insulinUnitsTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="From Food:"
        android:id="@+id/foodTextView"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/insulinUnitsTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sliding Factor:"
        android:id="@+id/slidingFactorTextView"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/foodTextView"
        android:layout_alignEnd="@+id/foodTextView" />

</RelativeLayout>
